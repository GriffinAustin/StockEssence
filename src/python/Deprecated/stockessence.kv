#: kivy 1.10.1
#:import math math

<DefButton@Button>:
    font_size: self.height * 0.6
    font_name: 'OpenSans'
    background_normal: ''
    background_down: ''
    background_color: (0.83, 0.83, 0.83, 0.0)
    color: 0.44, 0.44, 0.44, 1.0
    canvas.before:
        Color:
            rgba: (0.83, 0.83, 0.83, 1.0) if self.state=='normal' else (0.73, 0.73, 0.73, 1.0)
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [4,]

<DefLabel@Label>:
    font_name: 'OpenSans'
    color: 0.44, 0.44, 0.44, 1.0

<Line>:
    canvas:
        Color:
            rgba: (0.83, 0.83, 0.83, 1.0)
        Line:
            width: 1
            points: root.width * 0.02, root.height * 0.9, root.width * 0.98, root.height * .9

<StockEssence>:
    canvas:
        # Background color
        Color:
            rgba: (0.93, 0.93, 0.93, 1.0)
        # Rectangle covers background
        Rectangle:
            pos: self.pos
            size: self.size

    DefButton:
        id: button_retrieve_data
        size_hint: 0.26, 0.08
        pos_hint: {'center_x': 0.5, 'center_y': .5}
        text: 'Retrieve Data'
        on_release: root.init()

    DefButton:
        id: button_dashboard
        font_size: self.height * 0.6
        text: 'Dashboard'
        #pos_hint: {'top': 1.45}
        pos: root.width * 0.02, root.height - self.height - 8
        size_hint: 0.26, 0.08
    DefLabel:
        id: label_progress
        font_size: button_retrieve_data.font_size
        text: 'Progress:'
        pos_hint: {'center_y': 0.425}